pipeline {
    agent any
    stages {
    	stage('Git-checkout') {
	    steps {
	        git credentialsId: 'github', url: 'https://github.com/cooldsachin/CI-with-Jenkins-in-AWS-Demo.git'
	    }
	}
	stage('build') {
	    steps {
            	bat 'mvn package'
                }
	} 
	stage("Sonarqube analysis") {
	    steps {
	    	withSonarQubeEnv('sonar') {
    			bat "${MAVEN_HOME}/bin/mvn sonar:sonar"
		}
	    }	
	}   
	stage('Deploy') {
	    steps {
		nexusPublisher nexusInstanceId: '1234', nexusRepositoryId: 'maven-releases', packages: [[$class: 'MavenPackage', mavenAssetList: [[classifier: '', extension: '', filePath: 'C:\\Program Files (x86)\\Jenkins\\jobs\\sonar-job\\workspace\\project\\target\\ProjectIGI-1.${BUILD_NUMBER}.war']], mavenCoordinate: [artifactId: 'projectRnD', groupId: 'com.ci.jenkins', packaging: 'war', version: '1.${BUILD_NUMBER}']]]
	    }
	}
    }
}
	
